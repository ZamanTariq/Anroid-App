<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:text="Upload Photos"
            android:textSize="35dp"
            android:drawableStart="@drawable/ic_add_a_photo_black_100dp"
            android:padding="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#fdf9f9"/>

        
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="680dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CAR INFORMATION"
        android:textSize="25dp"
        android:textColor="#000"
        android:textStyle="bold"
        />
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Car Information"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Registeration City"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Millage (KM)"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Body Color"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price (PKR)"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Engine Type"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Features"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUGGESTIONS"
        android:drawableStart="@drawable/ic_add_black_24dp"
        android:background="#f7f0f0"
        android:textStyle="bold"
        android:textSize="18dp"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACT INFO"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile Number"/>



<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="POST"
    android:textColor="#f5f2f2"
    android:textSize="20dp"
    android:background="#2025bf"/>

</LinearLayout>
    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/mainpic"
        android:gravity="center"
        android:orientation="vertical">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/cities"></Spinner>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:drawableStart="@drawable/ic_search_black_24dp"
            android:hint="Start searching used cars"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alerts"
            android:drawableStart="@drawable/ic_add_alert_black_24dp"
            android:background="#f7f6f6"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:textColor="#000000"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved Ads"
            android:drawableStart="@drawable/ic_add_a_photo_black_24dp"
            android:background="#f7f5f5"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:textColor="#000000"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="+SELL YOUR CAR"
           android:textSize="25dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="25dp"
           android:background="#5e973a"
           android:gravity="center"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        app:srcCompat="@drawable/car"
        android:layout_weight="3"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Mercedes-Benz"
        android:textSize="25dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="20dp"
        android:text="PKR 90 lacs"
        android:textColor="#00ff00"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="15dp"
        android:text="2016-35,123 km - Turbo" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="15dp"
        android:text="Lahore" />


</LinearLayout>