<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/tools"
        android:gravity="center"
        android:orientation="vertical">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/cities"></Spinner>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:drawableStart="@drawable/ic_search_black_24dp"
            android:hint="Start searching tools"
            android:textColorHint="#1b0101"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alerts"
            android:drawableStart="@drawable/ic_add_alert_black_24dp"
            android:background="#f7f6f6"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:textColor="#000000"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved Ads"
            android:drawableStart="@drawable/ic_add_a_photo_black_24dp"
            android:background="#f7f5f5"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:textColor="#000000"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+SELL YOUR SPARE PARTS"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:background="#5e973a"
            android:gravity="center"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sparepart"
        android:layout_weight="3"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Spare Parts"
        android:textSize="25dp"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="20dp"
        android:text="PKR 100 - 99,000"
        android:textColor="#00ff00"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="15dp"
        android:text="OLd and Latest Parts" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="15dp"
        android:text="Lahore" />

</LinearLayout>